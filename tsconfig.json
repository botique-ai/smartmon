{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,
    "jsx": "react",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es2017",
    "noEmit": true,
    "pretty": true
  },
  "include": ["src/**/*", "typings/**/*"]
}
